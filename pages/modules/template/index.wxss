/* modules/template/index.wxss */
page {
  background-color: #f7f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  padding: 0;
  margin: 0;
}

.module-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0;
  margin: 0;
}

/* 状态栏占位 */
.status-bar {
  width: 100%;
  background-color: #00a0e9;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  background-color: #00a0e9;
  padding: 0 30rpx;
  box-sizing: border-box;
  color: #fff;
  position: relative;
}

.nav-back {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  width: 30rpx;
  height: 30rpx;
  border-top: 4rpx solid #fff;
  border-left: 4rpx solid #fff;
  transform: rotate(-45deg);
}

.nav-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 32rpx;
  font-weight: bold;
}

/* 页面内容 */
.module-content {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}

.module-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 60rpx 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 90%;
}

.module-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.module-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.module-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.module-message {
  font-size: 30rpx;
  color: #999;
  margin-top: 10rpx;
  padding: 20rpx;
  border-top: 1px solid #f5f5f5;
  width: 100%;
} 