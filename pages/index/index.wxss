/**index.wxss**/
page {
  background-color: #00a0e9;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  padding: 0;
  margin: 0;
}

.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
  padding: 0;
  margin: 0;
}

/* 状态栏占位 */
.status-bar {
  width: 100%;
  height: 80rpx;
  background-color: #00a0e9;
}

/* 顶部背景区域 */
.header-bg {
  width: 100%;
  background-color: #00a0e9;
  position: relative;
  padding: 0 0 30rpx;
  height: auto;
  min-height: 420rpx;
  overflow: hidden;
  margin-top: 0;
}

/* 搜索区域 */
.search-container {
  padding: 10rpx 30rpx 20rpx;
  margin-bottom: 10rpx;
}

/* 搜索栏 */
.search-bar {
  width: 500rpx;  
  height: 72rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  margin-right: 10rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}

/* 轮播图样式 - 简化版 */
.banner {
  width: 95%;
  height: 280rpx;
  margin: 0 auto;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
}

.banner-content {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.banner-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 功能板块网格样式 */
.module-grid {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  padding: 30rpx 10rpx 20rpx;
  border-radius: 12rpx 12rpx 0 0;
  margin-top: -20rpx;
  box-shadow: 0 -3rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 20;
}

.module-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 0;
  margin-bottom: 20rpx;
}

.module-icon-wrap {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.module-icon {
  width: 100%;
  height: 100%;
}

.module-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 精选内容区域 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx;
  background-color: #fff;
  text-align: left;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.article-list {
  background-color: #fff;
  width: 100%;
}

.article-item {
  padding: 30rpx;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
}

.article-content {
  flex: 1;
  margin-right: 20rpx;
}

.article-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.article-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-meta {
  display: flex;
  justify-content: flex-end;
}

.view-count {
  font-size: 24rpx;
  color: #999;
}

.article-image {
  width: 180rpx;
  height: 140rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 立即报名按钮 */
.signup-btn-container {
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
  width: 100%;
  background-color: #fff;
}

.signup-btn {
  background-color: #00a0e9;
  color: #fff;
  font-size: 30rpx;
  padding: 15rpx 40rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 160, 233, 0.3);
  border: none;
  width: 300rpx;
} 
