/* pages/article/detail.wxss */
page {
  background-color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  padding: 0;
  margin: 0;
  height: 100%;
}

.article-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}

/* 状态栏占位 */
.status-bar {
  width: 100%;
  background-color: #fff;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  position: relative;
}

.nav-back {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  width: 30rpx;
  height: 30rpx;
  border-top: 4rpx solid #333;
  border-left: 4rpx solid #333;
  transform: rotate(-45deg);
}

/* 文章滚动区域 */
.article-scroll {
  flex: 1;
  overflow-y: auto;
}

/* 文章内容样式 */
.article-content {
  padding: 0 40rpx 80rpx;
}

.article-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin: 30rpx 0 20rpx;
}

.article-meta {
  display: flex;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.article-author {
  margin-right: 20rpx;
}

.article-main-image {
  width: 100%;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.article-main-image image {
  width: 100%;
  vertical-align: top;
}

.article-body {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
  margin-bottom: 50rpx;
}

/* 底部广告区域 */
.article-promotion {
  display: flex;
  align-items: center;
  background-color: #f9f9f9;
  padding: 30rpx;
  border-radius: 12rpx;
  margin: 40rpx 0;
}

.qrcode {
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
}

.promotion-text {
  flex: 1;
}

.promotion-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.promotion-app {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff5252;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
}

.promotion-url {
  font-size: 24rpx;
  color: #666;
}

/* 免责声明 */
.disclaimer {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

/* 相关推荐文章 */
.related-articles {
  margin-top: 50rpx;
}

.related-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 24rpx;
}

.related-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 8rpx;
  height: 36rpx;
  background-color: #ff5252;
  border-radius: 4rpx;
}

.article-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-item-content {
  flex: 1;
  margin-right: 20rpx;
}

.article-item-title {
  font-size: 32rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-item-date {
  font-size: 26rpx;
  color: #999;
}

.article-item-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  object-fit: cover;
} 